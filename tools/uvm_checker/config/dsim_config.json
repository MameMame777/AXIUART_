{
  "dsim_environment": {
    "required_vars": [
      "DSIM_HOME",
      "DSIM_ROOT", 
      "DSIM_LIB_PATH"
    ],
    "optional_vars": [
      "DSIM_LICENSE"
    ],
    "executable_paths": {
      "dsim": "{DSIM_HOME}/bin/dsim.exe",
      "dcreport": "{DSIM_HOME}/bin/dcreport.exe"
    }
  },
  "project_structure": {
    "rtl_dir": "rtl",
    "sim_dir": "sim/uvm",
    "scripts_dir": "sim/uvm",
    "waveform_dir": "archive/waveforms",
    "coverage_dir": "sim/uvm/coverage_report"
  },
  "test_execution": {
    "default_seed": 12345,
    "default_verbosity": "UVM_MEDIUM",
    "timeout_seconds": 300,
    "retry_count": 2,
    "powershell_script": "run_uvm.ps1"
  },
  "validation_rules": {
    "timescale_required": "`timescale 1ns / 1ps",
    "max_log_size_mb": 100,
    "min_waveform_size_mb": 1,
    "required_uvm_components": [
      "driver",
      "monitor", 
      "agent",
      "sequence",
      "scoreboard"
    ]
  },
  "error_patterns": {
    "crc_errors": [
      "CRC mismatch.*recv=0x([0-9a-fA-F]+).*exp=0x([0-9a-fA-F]+)",
      "Frame validation failed.*CRC"
    ],
    "alignment_errors": [
      "CHECK_ALIGNMENT -> ERROR",
      "AXI address alignment error"
    ],
    "uvm_errors": [
      "UVM_ERROR",
      "UVM_FATAL"
    ],
    "compilation_errors": [
      "Error-\\[.*\\]",
      "Fatal-\\[.*\\]"
    ]
  },
  "coverage_targets": {
    "phase4_toggle_minimum": 60.0,
    "phase5_expression_target": 80.0,
    "phase5_functional_target": 90.0
  }
}